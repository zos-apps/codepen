{
  "name": "@zos-apps/codepen",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "zos": {
    "id": "ai.hanzo.codepen",
    "name": "CodePen",
    "icon": "✏️",
