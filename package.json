      "Live preview",
      "HTML/CSS/JS editors",
      "Console output",
      "Save pens"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "description": "Social development environment for front-end designers and developers",
  "homepage": "https://zos-apps.github.io/codepen",
  "repository": {
    "type": "git",
